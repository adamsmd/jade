<configuration>

  <conversionRule
    conversionWord="logger"
    converterClass="org.ucombinator.jade.util.RelativeLoggerConverter" />

  <conversionRule
    conversionWord="caller"
    converterClass="org.ucombinator.jade.util.DynamicCallerConverter" />

  <conversionRule
    conversionWord="highlight"
    converterClass="org.ucombinator.jade.util.HighlightingCompositeConverter" />

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
    <encoder>
      <!-- <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern> -->
      <pattern>%highlight(%-5level %logger{org.ucombinator.jade.}:) %message%n%caller</pattern>
    </encoder>
  </appender>

  <root level="trace">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
